{% extends '::front.html.twig' %}

{% block title %}{{ title }}{% endblock%}

{% block body %}
    <header id="head" class="secondary"></header>

    <!-- container -->
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="{{ path('front_home') }}">Home</a></li>
            <li class="active">{{ title }}</li>
        </ol>

        {% for flashMessages in app.session.flashbag.all() %}
            {% for flashMessage in flashMessages %}
                <div class="flash-message">
                    <p>{{ flashMessage }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">

            <!-- Article main content -->
            <article class="col-sm-9 maincontent">
                <header class="page-header">
                    <h1 class="page-title">Contact Us</h1>
                </header>

                <p>
                    Weâ€™d love to hear from you. You have any problem ? Interested in working together? Fill out the form below and our Customer Service will get back to you as soon as possible.
                </p>
                <br>
                <form action="{{ path("front_contact") }}" method="post">
                    <div class="row">
                        <div class="col-sm-4">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Name' } }) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'placeholder': 'Phone'} }) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_widget(form.message, { 'attr': {'class': 'form-control messageContact', 'placeholder': 'Type your message here...'} }) }}
                            {{ form_errors(form.message) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            {#<label class="checkbox"><input type="checkbox"> Sign up for newsletter</label>#}
                        </div>
                        <div class="col-sm-6 text-right">
                            <input class="btn btn-action" type="submit" value="Send message">
                        </div>
                    </div>
                </form>

            </article>
            <!-- /Article -->

            <!-- Sidebar -->
            <aside class="col-sm-3 sidebar sidebar-right">

                <div class="widget">
                    <h4>Address</h4>
                    <address>
                        30 rue turbigo, Paris, 75003, FRANCE
                    </address>
                    <h4>Phone:</h4>
                    <address>
                        (+33) 1 84 16 20 10
                    </address>
                </div>

            </aside>
            <!-- /Sidebar -->

        </div>
    </div>	<!-- /container -->

    <section class="container-full top-space">
        <div id="map"></div>
    </section>

    {% block javascript %}
    {{ parent() }}
    <!-- Google Maps -->
    <script src="https://maps.googleapis.com/maps/api/js?key=&amp;sensor=false&amp;extension=.js"></script>
    <script src="{{ asset('/js/google-map.js') }} "></script>
    {% endblock %}
{% endblock %}