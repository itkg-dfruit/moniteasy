{% extends 'ApplicationBundle::back_end_layout.html.twig' %}

{% block body %}
    <header>
        <h1 class="col-md-offset-2">Update your Check Url :</h1>
    </header>

    <form action="{{ path('backend_check_update', {'idCheckUrl' : id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        <div class="form-group">
            {{ form_errors(form.name) }}
            <label for="checkUrlType_name" class="col-sm-2 control-label">Name: </label>
            <div class="col-sm-10">
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.url) }}
            <label for="checkUrlType_url" class="col-sm-2 control-label">Url: </label>
            <div class="col-sm-10">
                {{ form_widget(form.url) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.timeOut) }}
            <label for="checkUrlType_timeOut" class="col-sm-2 control-label">Response Time Out: </label>
            <div class="col-sm-10">
                {{ form_widget(form.timeOut) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.pingInterval) }}
            <label for="checkUrlType_pingInterval" class="col-sm-2 control-label">Check Interval: </label>
            <div class="col-sm-10">
                {{ form_widget(form.pingInterval) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.tags) }}
            <label for="checkUrlType_tags" class="col-sm-2 control-label">Tags: </label>
            <div class="col-sm-10">
                {{ form_widget(form.tags) }}
            </div>
        </div>

        {{ form_widget(form._token) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-success" type="submit">Save</button>
                <button class="btn btn-warning" type="reset">Reset</button>
            </div>
        </div>

    </form>
{% endblock %}